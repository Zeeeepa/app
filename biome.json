{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": []
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "useSelfClosingElements": {
          "level": "error",
          "fix": "safe"
        }
      },
      "recommended": true,
      "suspicious": {
        "noDoubleEquals": {
          "level": "error",
          "fix": "safe",
          "options": {}
        }
      },
      "nursery": {
        "useSortedClasses": {
          "level": "error",
          "options": {}
        }
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}